@model UrunYonetimSistemi.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card glass text-white mt-5">
            <div class="card-header bg-transparent border-bottom border-light text-center py-4">
                <i class="bi bi-person-circle display-4"></i>
                <h3 class="mt-2 text-readable">Giriş Yap</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email" class="text-dark">Email Adresi</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <label asp-for="Password" class="text-dark">Şifre</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label text-readable" asp-for="RememberMe">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-lg">
                            Giriş Yap
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-transparent border-top border-light text-center py-3">
                <p class="mb-0 text-readable-muted">Hesabınız yok mu? <a asp-action="Register" class="text-warning fw-bold">Kayıt Ol</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
