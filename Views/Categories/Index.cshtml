@model IEnumerable<UrunYonetimSistemi.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 fw-bold">Kategori Yönetimi</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Yeni Kategori Ekle
    </a>
</div>

<div class="card shadow-lg glass">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th class="text-end pe-4">İşlemler</th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td class="ps-4 fw-medium">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-end pe-4">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Düzenle">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
