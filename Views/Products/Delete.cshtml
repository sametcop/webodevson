@model UrunYonetimSistemi.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm mt-4 border-danger">
            <div class="card-header bg-danger text-white py-3">
                <h4 class="card-title mb-0">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Silme Onayı
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-circle me-1"></i>
                    Bu ürünü silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
                </div>

                <div class="mb-4">
                    <h5 class="text-secondary mb-3">@Html.DisplayNameFor(model => model.Name)</h5>
                    <p class="fs-4 fw-bold">@Html.DisplayFor(model => model.Name)</p>
                </div>

                <div class="row g-3">
                    <div class="col-sm-6">
                        <label class="text-muted small">@Html.DisplayNameFor(model => model.Price)</label>
                        <div class="fs-5 text-dark">@Html.DisplayFor(model => model.Price) ₺</div>
                    </div>
                    <div class="col-sm-6">
                        <label class="text-muted small">@Html.DisplayNameFor(model => model.CreatedDate)</label>
                        <div class="text-dark">@Model.CreatedDate.ToString("dd.MM.yyyy")</div>
                    </div>
                    <div class="col-12">
                        <label class="text-muted small">@Html.DisplayNameFor(model => model.Description)</label>
                        <p class="text-dark">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>İptal
                </a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash-fill me-1"></i>Evet, Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
