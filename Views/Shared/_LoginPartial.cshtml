@using Microsoft.AspNetCore.Identity
@using UrunYonetimSistemi.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
             <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2 text-white fw-bold shadow-sm" style="width: 32px; height: 32px;">
                @(user?.FirstName?.Substring(0,1).ToUpper() ?? "U")
            </div>
            <span class="text-white">@user?.FirstName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-lg glass-dropdown" aria-labelledby="userDropdown">
            <div class="px-4 py-3 border-bottom border-secondary mb-2">
                <p class="mb-0 text-readable fw-bold">@user?.FirstName @user?.LastName</p>
                <p class="mb-0 text-readable-muted small">@user?.Email</p>
            </div>
            <li>
                <a class="dropdown-item text-light" asp-controller="Account" asp-action="Profile">
                    <i class="bi bi-person me-2"></i> Profilim
                </a>
            </li>
            <li>
                <a class="dropdown-item text-light" asp-controller="Account" asp-action="ChangePassword">
                    <i class="bi bi-key me-2"></i> Şifre Değiştir
                </a>
            </li>
            <li><hr class="dropdown-divider bg-secondary"></li>
            <li>
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="btn btn-outline-light btn-sm px-3" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-1"></i>Giriş Yap
        </a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary btn-sm px-3" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus me-1"></i>Kayıt Ol
        </a>
    </li>
}
</ul>
